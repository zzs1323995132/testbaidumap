<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zzs.testbaidumap.activity.PoiqueryActivity">

    <LinearLayout
        android:id="@+id/layout_activity_poiquery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_activity_poiquery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:hint="请输入搜索关键字"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_activity_poiquery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:onClick="onClick"
            android:text="搜索" />
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mv_activity_poiquery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true" />
</LinearLayout>
